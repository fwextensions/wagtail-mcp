{
  "name": "wagtail-mcp",
  "version": "0.0.1",
  "description": "Read-only access to a Wagtail CMS using the MCP protocol",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "wagtail",
    "cms",
    "llm",
    "ai"
  ],
  "author": "John Dunning",
  "license": "MIT",
  "homepage": "https://github.com/fwextensions/wagtail-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/fwextensions/wagtail-mcp.git"
  },
  "main": "dist/server.js",
  "bin": {
    "wagtail-mcp": "./dist/server.js"
  },
  "engines": {
    "node": ">=21.7.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "inspect": "npx -y @modelcontextprotocol/inspector tsx src/server.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "fastmcp": "^1.24.0",
    "patch-package": "^8.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.15.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
