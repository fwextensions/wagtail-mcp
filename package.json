{
  "name": "wagtail-mcp",
  "version": "0.0.1",
  "description": "An MCP server for read-only access to Wagtail CMS using @modelcontextprotocol/sdk",
  "main": "dist/server.js",
  "bin": {
    "wagtail-mcp": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "inspect": "npx -y @modelcontextprotocol/inspector tsx src/server.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "postinstall": "patch-package"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "wagtail",
    "cms",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "fastmcp": "^1.24.0",
    "patch-package": "^8.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.15.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
